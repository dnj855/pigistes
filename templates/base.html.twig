<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Projet pigistes{% endblock %}</title>
    {% block stylesheets %}
        {{ encore_entry_link_tags('global') }}
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.2/css/all.css">
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('global') }}
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"
                integrity="sha384-q2kxQ16AaE6UbzuKqyBE9/u/KzioAlnx2maXQHiDX9d4/zp8Ok3f+M7DPm+Ib6IU"
                crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.min.js"
                integrity="sha384-pQQkAEnwaBkjpqZ8RU1fF1AKtTcHJwFl3pblpTlHXybJjHpMYo79HY3hIi4NKxyj"
                crossorigin="anonymous"></script>
    {% endblock %}
</head>
<body>
{% block body %}
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{ path('index') }}">Pigistes</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link{% if active_menu == 'tarifs' %} active{% endif %}"
                           href="{{ path('tarifs_index') }}">Tarifs</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link{% if active_menu == 'pigistes' %} active{% endif %}"
                           href="{{ path('pigistes_index') }}">Pigistes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link{% if active_menu == 'contrats' %} active{% endif %}"
                           href="{{ path('contrats_index') }}">Contrats</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link{% if active_menu == 'drp' %} active{% endif %}"
                           href="{{ path('drp_index') }}">DRP</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container">
        <div class="row">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert-{{ label }} alert alert-dismissible fade show">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endfor %}
            {% endfor %}
        </div>
        {% block page_content %}
        {% endblock %}
    </div>
{% endblock %}
</body>
</html>
